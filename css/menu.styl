#menu
  background-color rgba(255,255,250,0.5)
  border-radius 5px
  height 60px
  text-align center
  font-size 0.9em
  margin 4px
  ul
    list-style-type none
    position absolute
    z-index 3
    li
      &.nivel1
        float left
        width 165px
        margin-right 2px
      a
        display block
        text-decoration none
        color #fff
        background-color rgba(0,0,100,0.8)
        padding 8px
        position relative
        border-radius 5px
        &.nivel1
          display block !important
          display: none
          position relative
      &:hover
        position relative
      ul
        display none
        li
          a
            width 160px
            margin -3px -8px
            padding 6px 0px 8px 0px
            border-top-color #000
            &:hover
              border-top-color #000
              position relative

#menu ul li a:hover, #menu ul li:hover a.nivel1
  background-color rgba(20,40,255,0.5)
  color #000
  position relative

#menu ul li a:hover ul, #menu ul li:hover ul
  display block
  position absolute;left: 0px

